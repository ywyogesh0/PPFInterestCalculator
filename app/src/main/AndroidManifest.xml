<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ashishyogesh.android.ppfinterestcalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ashishyogesh.android.ppfinterestcalculator.MainSplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ashishyogesh.android.ppfinterestcalculator.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
    </application>

</manifest>