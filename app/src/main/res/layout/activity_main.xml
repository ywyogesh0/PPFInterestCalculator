                    android:layout_height="wrap_content"
                    android:text="After 5th" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Interest Amount" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="After 5th" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
